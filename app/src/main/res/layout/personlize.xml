<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/user_icon"
            android:id="@+id/user_img"
            android:layout_marginLeft="30dp"
            android:layout_height="90dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:weightSum="2"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:layout_marginBottom="5dp"
                android:id="@+id/user_name"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:text="Akash Chandra"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/user_email"
                android:textColor="#ffffff"
                android:text="akashchandra733@gmail.com"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#469"
            android:text="Thank you for subscribing NewsBook"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/news"
            android:textSize="17dp"
            android:background="@drawable/book_back"
            android:textColor="#ffffff"
            android:padding="5dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Click and Enjoy Reading"/>
    </LinearLayout>

</LinearLayout>